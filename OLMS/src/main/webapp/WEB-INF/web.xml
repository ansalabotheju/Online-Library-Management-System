<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>lk.karunathilaka.OLMS.controller.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StaffServlet</servlet-name>
        <servlet-class>lk.karunathilaka.OLMS.controller.StaffServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StaffServlet</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PublisherServlet</servlet-name>
        <servlet-class>lk.karunathilaka.OLMS.controller.PublisherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PublisherServlet</servlet-name>
        <url-pattern>/publisher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MemberServlet</servlet-name>
        <servlet-class>lk.karunathilaka.OLMS.controller.MemberServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/member</url-pattern>
    </servlet-mapping>
</web-app>